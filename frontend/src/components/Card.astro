---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="default-style">
  <a href={href}>
    <h2>
      {title}
    </h2>
  </a>
</li>
<style>
  .default-style > a {
    display: flex;
    justify-content: center;
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .default-style:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .default-style:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
